<!-- Unpack the *-ctl-scripts.zip archive in the TE_BASE/scripts directory -->
<!-- Add this entry to TE_BASE/config.xml (//organization/standard) -->
<organization>
  <name>OGC</name>
  <standard>
    <name>OGC API - Environmental Data Retrieval</name>
    <version>
      <name>${spec-version}</name>
      <suite>
        <namespace-uri>http://www.opengis.net/cite/ogcapi-edr10</namespace-uri>
        <prefix>tns</prefix>
        <local-name>ets-ogcapi-edr10-${version}</local-name>
        <title>ets-ogcapi-edr10 Conformance Test Suite</title>
        <description>Describe scope of testing.</description>
        <!-- Add baisc conformance test suites -->
        <BasicConformanceClasses>
          <conformanceClass>Core</conformanceClass>
          <conformanceClass>Collections</conformanceClass>
        </BasicConformanceClasses>        
      </suite>
      <revision>
        <name>${project.version}</name>
        <status>Final</status>
        <sources>
          <source>ogcapi-edr10/${spec-version}/ctl</source>
        </sources>
        <webdir>ogcapi-edr10/${spec-version}/site</webdir>
      </revision>
    </version>
  </standard>
</organization>
